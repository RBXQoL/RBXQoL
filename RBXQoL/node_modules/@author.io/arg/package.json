{
  "name": "@author.io/arg",
  "version": "1.3.22",
  "description": "An argument parser for CLI applications.",
  "main": "./src/index.js",
  "exports": {
    "import": "./index.js",
    "default": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/author/arg.git"
  },
  "author": "Corey Butler",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "files": [
    "*.js"
  ],
  "homepage": "https://github.com/author/arg#readme",
  "devDependencies": {
    "@author.io/dev": "^1.1.5"
  },
  "dev": {
    "alias": {
      "@author.io/arg": "/app/.dist/arg/index.js"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "_*",
      "_**/*",
      ".**/*",
      "node_modules",
      "karma.conf.js",
      "karma.conf.cjs",
      "build.js"
    ],
    "globals": [
      "window",
      "global",
      "globalThis"
    ]
  }
}